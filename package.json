--- styles/globals.css ---
:root{
  --blue: #1f6feb;
  --muted:#666;
}
*{box-sizing:border-box}
body{margin:0;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Noto Sans KR', 'Apple SD Gothic Neo', 'Nanum Gothic', 'Malgun Gothic', sans-serif;background:#fff;color:#222}
.container{max-width:980px;margin:18px auto;padding:0 16px}
.topbar{background:var(--blue);color:#fff;padding:14px 0}
.topbar .logo{font-weight:700;font-size:18px;display:inline-block}
.nav{display:inline-block;margin-left:28px}
.nav-btn{background:transparent;border:0;color:#fff;margin-right:10px;cursor:pointer;padding:6px 8px}
.nav-btn.active{text-decoration:underline;font-weight:700}
.board-table{width:100%;border-collapse:collapse;margin-top:18px}
.board-table th, .board-table td{padding:10px;border-bottom:1px solid #eee;text-align:left}
.board-table th{color:var(--muted);font-weight:600}
.board-table .title-col{width:60%}
.row{cursor:pointer}
.row:hover{background:#fafafa}
.post-area{margin-top:18px}
.post-title{margin:0 0 6px 0}
.post-meta{color:var(--muted);font-size:14px;display:flex;gap:12px}
.post-content{white-space:pre-wrap;margin-top:12px;padding:12px;border:1px solid #f0f0f0;border-radius:6px;background:#fff}
.comments{margin-top:12px}
.comment{padding:8px 0;border-bottom:1px solid #f4f4f4}
.c-meta{color:var(--muted);font-size:13px;margin-bottom:6px}
.back-btn{margin-top:12px;background:transparent;border:0;color:var(--blue);cursor:pointer}
